@model AirplaneReservationSystem.Domain.DTO.AddToShoppingCartDto
@{
    ViewData["Title"] = "AddFlightTicketToCart";
}

<h1>Add Flight Ticket To Cart</h1>

<hr />

<div class="row">
    <div class="col-4 m-auto">
        <form asp-action="AddFlightTicketToCart" method="post">
            <input type="hidden" asp-for="FlightId" />
            <div class="form-group">
                <label asp-for="SelectedFlight.AirlineName"></label>
                <input asp-for="SelectedFlight.AirlineName" class="form-control" disabled />
                <p>@Model.SelectedFlight.FlightDeparture - @Model.SelectedFlight.FlightDestination</p>
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>