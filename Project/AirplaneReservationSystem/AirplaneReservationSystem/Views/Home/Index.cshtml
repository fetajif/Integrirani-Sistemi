@{
    ViewData["Title"] = "Home Page";
}

<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="width:1200px;height:500px;" src="https://blog.aci.aero/wp-content/uploads/2019/03/shutterstock_745544935-952x635.jpg" alt="Airport">
        </div>
        <div class="carousel-item">
            <img style="width:1200px;height:500px;" src="https://cruisetraveltips.net/wp-content/uploads/2018/03/d446b99f1d5aed493f857d8898d01239.jpg" alt="airline reservation system">
        </div>
        <div class="carousel-item">
            <img style="width:1200px;height:500px;" src="https://previews.123rf.com/images/metelsky/metelsky1801/metelsky180100064/92779718-airplane-ticket-blue-boarding-pass-coupon-isolated-on-white-background-detailed-blank-of-plane-ticke.jpg" alt="airplane ticket">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>

<div class="text-center">
    <h1 class="display-4">Airplane Reservation System</h1>
    <p>Book flights in the easisest and fastest way.</p>
    <a class="text-dark btn btn-primary" asp-area="" asp-controller="Flights" asp-action="Index">Book a flight</a>
</div>

